{
  "compilerOptions": {
    "lib": ["DOM", "ES2021"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared": ["./src/shared/index.ts"]
    }
  },
  "include": ["src", "src-ui"]
}

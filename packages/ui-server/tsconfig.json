{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/"]
}
